<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listViewModel"
            type="com.mms.manage_my_stuff.ui.BoxTypeListViewModel" />

        <variable
            name="itemViewModel"
            type="com.mms.manage_my_stuff.ui.BoxTypeItemViewModel" />
        
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/room_menu_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listViewModel.onItemSelected()}" >


        <TextView
            android:id="@+id/box_type_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text='@{itemViewModel.title}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
